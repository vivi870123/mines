set selection-clipboard clipboard
set statusbar-h-padding 0
set statusbar-v-padding 0

set page-padding 1

set font "monospace normal 12"
set recolor

set highlight-transparency 0.8
set scroll-step 60

map u scroll half-up
map d scroll half-down
map D toggle_page_mode
map r reload
map R rotate
map = zoom in
map - zoom out
map i recolor
map p print

set default-bg #002b36
set highlight-color #82aaff
set highlight-active-color #f07178
set completion-fg "#14161F"
set completion-highlight-bg "#bbc5ff"
set recolor-darkcolor "#bbc5ff"
set recolor-lightcolor "#14161F"
set default-bg "#14161F"
set default-fg "#14161F"
